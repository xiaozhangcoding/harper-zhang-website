---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Home | Xiao Zhang">
  <section class="mb-16">
    <h1 class="text-4xl md:text-5xl font-heading text-softBrown mb-6">
      Welcome
    </h1>
    <p class="text-lg leading-relaxed mb-4">
      Hello! I'm glad you found your way here. This is my little corner of the internet
      where I share thoughts, stories, and things I find interesting.
    </p>
    <p class="text-lg leading-relaxed">
      Feel free to explore, read a few posts, and get to know me a bit better.
      Make yourself at home.
    </p>
  </section>

  <section>
    <h2 class="text-2xl font-heading text-softBrown mb-8">Recent Posts</h2>
    {recentPosts.length > 0 ? (
      <div class="space-y-10">
        {recentPosts.map((post) => (
          <PostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            slug={post.slug}
            heroImage={post.data.heroImage}
          />
        ))}
      </div>
    ) : (
      <p class="text-warmGray italic">No posts yet. Check back soon!</p>
    )}

    {recentPosts.length > 0 && (
      <div class="mt-10">
        <a href="/blog" class="inline-block text-accent hover:text-accentDark">
          View all posts &rarr;
        </a>
      </div>
    )}
  </section>
</BaseLayout>
